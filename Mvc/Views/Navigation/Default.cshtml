@model  List<SiteMapNode>
@using System.Web
@using Telerik.Sitefinity.Modules.Pages
@using Telerik.Sitefinity.Pages.Model
@using Telerik.Sitefinity.Web
@using System.Linq
@using SitefinityWebApp.Utilities

<section id="mu-menu">
	<nav class="navbar navbar-default" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<!-- LOGO -->
				<!-- TEXT BASED LOGO -->
				<a class="navbar-brand" href="index.html"><i class="fa fa-university"></i><span>Varsity</span></a>
				<!-- IMG BASED LOGO	-->
				<!-- <a class="navbar-brand" href="index.html"><img src="assets/img/logo.png" alt="logo"></a> -->
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
					
					@foreach (SiteMapNode node in Model)
					{
						if (!node.HasChildNodes)
						{
							<li class=@(HtmlHelpers.IsActiveNode(node, Request.RawUrl) ? "active" : string.Empty)>
								<a href="@Url.Content(node.Url)">@node.Title</a>
							</li>
						}
						else
						{
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">
									@node.Title<span class="fa fa-angle-down"></span>
								</a>
								<ul class="dropdown-menu" role="menu">
									@foreach (SiteMapNode childNode in node.ChildNodes)
									{
										<li><a href="@Url.Content(childNode.Url)">@childNode.Title</a></li>
									}
								</ul>
							</li>
						}
					}
					<li><a href="#" id="mu-search-icon"><i class="fa fa-search"></i></a></li>
				</ul>
			</div>
		</div>
	</nav>
</section>

<!-- Start search box -->
<div id="mu-search">
	<div class="mu-search-area">
		<button class="mu-search-close"><span class="fa fa-close"></span></button>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<form class="mu-search-form">
						<input type="search" placeholder="Type Your Keyword(s) & Hit Enter">
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End search box -->
